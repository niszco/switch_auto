{% extends 'base.html.twig' %}

{% block body %}
    <!-- Pour les enums : .value dans Twig pour accéder à la valeur de l'enum ! -->
    <body class="font-sans">
    <header id="main-header-content">
        <h1 class="text-center text-7xl text-red-700 font-mono mt-8"><a href="{{ path('home') }}">Switch-Auto</a></h1>
        <div id="routes" class="text-center mt-12 mr-4 ml-4 space-x-16 flex text-3xl">
            <a href="" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1">Acheter un véhicule</a>
            <a href="" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1">Vendre un véhicule</a>
            <a href="" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1">Mon compte</a>
        </div>
    </header>

    <main class="main-content-display">

        <div id="main-filter" class="flex justify-center p-8">
            <div id="dropdown-options" class="bg-gray-600 bg-opacity-5 w-1/4 h-3/6 p-8 m-2 rounded">
                <form action="{{ path('app_vehicle_index') }}" method="get" class="text-center flex flex-col">
                    <label for="energyTypes">Énergie du véhicule :</label>
                    <select name="energyTypes" id="energyTypes">
                        <option value="">Aucune préférence</option>
                        {% for energyType in energyTypes %}
                            <option value="{{ energyType.name }}">{{ energyType.name }}</option>
                        {% endfor %}
                    </select>
                    <br>
                    <label for="brands">Marque :</label>
                    <select name="brands" id="brands">
                        <option value="">Aucune préférence</option>
                        {% for brand in brands %}
                            <option value="{{ brand.name }}">{{ brand.name }}</option>
                        {% endfor %}
                    </select>
                    <br>
                    <label for="color">Couleur :</label>
                    <select name="color" id="color">
                        <option value="">Aucune préférence</option>
                        {% for color in colors %}
                            <option value="{{ color.value }}">{{ color.value }}</option>
                        {% endfor %}
                    </select>
                    <br>
                    <label for="typeOfVehicle">Type de véhicule :</label>
                    <select name="typeOfVehicle" id="typeOfVehicle">
                        <option value="">Tous les types de véhicules</option>
                        {% for type in types %}
                            <option value="{{ type.value }}">{{ type.value }}</option>
                        {% endfor %}
                    </select>
                    <br>
                    <label for="gearboxType">Type de boîte de vitesses :</label>
                    <select name="gearboxType" id="gearboxType">
                        <option value="">Tous</option>
                        {% for gearbox in gearboxes %}
                            <option value="{{ gearbox.value }}">{{ gearbox.value }}</option>
                        {% endfor %}
                    </select>
                    <br>
                    <button type="submit" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-auto">Appliquer les filtres</button>
                </form>
            </div>
        </div>

        <p class="text-center text-2xl m-8">
            Nous sélectionons les meilleurs prix sur plus d'un milliers de véhicules !
        </p>
    </main>

    <footer id="main-footer-content" class="text-center">

    </footer>
    </body>
{% endblock %}