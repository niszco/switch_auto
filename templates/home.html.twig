{% extends 'base.html.twig' %}

{% block body %}
    <header id="main-header-content" class="shadow-md">
        <h1 class="text-center text-7xl text-red-700 font-mono mt-8"><a href="{{ path('home') }}">Switch-Auto</a></h1>

        <div id="routes" class="text-center mt-12 mr-4 ml-4 space-x-16 flex text-3xl">
            <a href="{{ path("app_vehicle_index") }}" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1 mb-8">Acheter un véhicule</a>
            <a href="{{ path("app_vehicle_new") }}" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1 mb-8">Vendre un véhicule</a>
            {% if app.user %}
                {# Utilisateur connecté #}
                <a href="{{ path("app_logout") }}" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1 mb-8">Déconnexion</a>
            {% else %}
                {# Utilisateur non connecté #}
                <a href="{{ path("app_login") }}" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1 mb-8">Connexion</a>
                <a href="{{ path("app_register") }}" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-1 mb-8">Inscription</a>
            {% endif %}
        </div>
    </header>

    <main class="main-content-display relative">
        <div id="main-filter" class="flex justify-center p-8">
            <div id="dropdown-options" class="bg-gray-600 bg-opacity-5 w-1/4 h-3/6 p-8 m-2 rounded">
                <form action="{{ path('app_vehicle_index') }}" method="get" class="text-center flex flex-col space-y-4">
                    <label for="brands" class="text-black">Marque :</label>
                    <select name="brands" id="brands" class="w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-red-300">
                        <option value="">Aucune préférence</option>
                        {% for brand in brands %}
                            <option value="{{ brand.name }}">{{ brand.name }}</option>
                        {% endfor %}
                    </select>

                    <label for="energyTypes" class="text-black">Énergie du véhicule :</label>
                    <select name="energyTypes" id="energyTypes" class="w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-red-300">
                        <option value="">Aucune préférence</option>
                        {% for energyType in energyTypes %}
                            <option value="{{ energyType.value }}">{{ energyType.value }}</option>
                        {% endfor %}
                    </select>

                    <label for="color" class="text-black">Couleur :</label>
                    <select name="color" id="color" class="w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-red-300">
                        <option value="">Aucune préférence</option>
                        {% for color in colors %}
                            <option value="{{ color.value }}">{{ color.value }}</option>
                        {% endfor %}
                    </select>

                    <label for="typeOfVehicle" class="text-black">Type de véhicule :</label>
                    <select name="typeOfVehicle" id="typeOfVehicle" class="w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-red-300">
                        <option value="">Tous les types de véhicules</option>
                        {% for type in types %}
                            <option value="{{ type.value }}">{{ type.value }}</option>
                        {% endfor %}
                    </select>

                    <label for="gearboxType" class="text-black">Type de boîte de vitesses :</label>
                    <select name="gearboxType" id="gearboxType" class="w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-red-300">
                        <option value="">Tous</option>
                        {% for gearbox in gearboxes %}
                            <option value="{{ gearbox.value }}">{{ gearbox.value }}</option>
                        {% endfor %}
                    </select>

                    <button type="submit" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-auto">Appliquer les filtres</button>
                </form>
            </div>
        </div>
    </main>



    <footer id="main-footer-content">
        <p class="text-center text-2xl m-8">
            Nous sélectionnons les meilleurs prix sur plus d'un millier de véhicules !
        </p>
    </footer>
    </body>
{% endblock %}
