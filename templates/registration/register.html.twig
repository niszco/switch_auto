{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="container mx-auto mt-8">
        <h1 class="text-center text-7xl text-red-700 font-mono m-8"><a href="{{ path('home') }}">Switch-Auto</a></h1>

        <h3 class="text-4xl text-center font-semibold mb-6">Enregistrez votre compte sur Switch-Auto</h3>

        <div class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_row(registrationForm.username, {
                    label: 'Pseudonyme',
                    attr: {
                        class: 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'
                    }
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                    attr: {
                        class: 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'
                    }
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(registrationForm.firstName, {
                    label: 'Pr√©nom',
                    attr: {
                        class: 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'
                    }
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(registrationForm.lastName, {
                    label: 'Nom',
                    attr: {
                        class: 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'
                    }
                }) }}
            </div>

            <div class="mb-4">
                {{ form_row(registrationForm.companyName, {
                    label: 'Nom de l\'entreprise (facultatif)',
                    attr: {
                        class: 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'
                    }
                }) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.typeOfCustomers, 'Votre situation') }}
                {{ form_widget(registrationForm.typeOfCustomers, {
                    'attr': {
                        'class': 'w-full p-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300'
                    }
                }) }}
            </div>


            <div class="mb-4">
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Accepter nos termes de services',
                    attr: {
                        class: 'mb-2'
                    }
                }) }}
            </div>

            <button type="submit" class="hover:bg-red-700 hover:text-white text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue active:bg-blue-800">Enregistrer son compte</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
