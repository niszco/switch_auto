{% extends 'base.html.twig' %}

{% block title %} Détails du véhicule :  {% endblock %}

{% block body %}
    <div class="container mx-auto mt-8">

        <h1 class="text-4xl font-semibold mb-6">{{ vehicle.name }} </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div>
                <img src="{{ asset(vehicle.images) }}" class="w-full h-auto rounded mb-4" alt="Vehicle Image" width="300px" height="300px">
            </div>

            <div>
                <table class="table-auto w-full m-4">
                    <tbody>
                    <tr>
                        <th class="text-right pr-4">Prix :</th>
                        <td class="text-2xl">{{ vehicle.price }} €</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Localisation :</th>
                        <td>{{ vehicle.localisation }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Année du véhicule :</th>
                        <td>{{ vehicle.year }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Condition :</th>
                        <td>{{ vehicle.vehicleCondition }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Modèle :</th>
                        <td>{{ vehicle.model }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Puissance du véhicule :</th>
                        <td>{{ vehicle.horsepower }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Puissance fiscale du véhicule :</th>
                        <td>{{ vehicle.fiscalHorsePower }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Énergie du véhicule :</th>
                        <td>{{ vehicle.carMileage }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Type d'énergie :</th>
                        <td>{{ vehicle.energyTypes.value }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Consommation :</th>
                        <td>{{ vehicle.energyConsumption }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Couleur :</th>
                        <td>{{ vehicle.color.value }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Type de véhicule :</th>
                        <td>{{ vehicle.typeOfVehicle.value }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Boîtes de vitesses :</th>
                        <td>{{ vehicle.gearboxType.value }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Énergie du véhicule:</th>
                        <td>{{ vehicle.energyTypes.value }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Finitions du véhicule :</th>
                        <td>{{ vehicle.finishes }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Longueur du véhicule :</th>
                        <td>{{ vehicle.length }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Empatement du véhicule :</th>
                        <td>{{ vehicle.width }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Dimensions du pneu :</th>
                        <td>{{ vehicle.tireSpec }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Nombres de places :</th>
                        <td>{{ vehicle.numberOfSeats }}</td>
                    </tr>
                    <tr>
                        <th class="text-right pr-4">Nombres de portes :</th>
                        <td>{{ vehicle.numberOfDoors }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="flex justify-end space-x-4 mb-8">
            <button class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-none"><a href="{{ path('home') }}">Retour à la liste</a></button>
            {% if app.user and is_granted('ROLE_ADMIN') %}
            <button class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-none"><a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">Modifier</a></button>
            <form method="post" action="{{ path('app_vehicle_delete', {'id': vehicle.id}) }}" onsubmit="return confirm('Voulez-vous supprimer ce véhicule ?');">
                <input type="hidden" value="{{ csrf_token('delete' ~ vehicle.id) }}">
                <button type="submit" class="hover:bg-red-700 bg-opacity-50 hover:text-white rounded-lg p-2 flex-none">Supprimer</button>
            </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
